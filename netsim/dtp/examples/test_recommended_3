# Topology: 1 - 2 - 3 - 4 - 5 - 6
#		    |   |
#		    7   8			

Link(1, 2, 10, 1)
Link(2, 3, 10, 1)
Link(3, 4, 10, 1)
Link(4, 5, 10, 1)
Link(6, 5, 10, 1)
Link(7, 3, 10, 1)
Link(8, 4, 10, 1)

# Routers are nodes 2, 3, 4 and 5
Router(2, 1)
Router(3, 1)
Router(4, 1)
Router(5, 1)

# Hosts 1, 7, 8 and 6
Host(1)
Host(7)
Host(8)
Host(6)

# Flow goes from node 1 to node 6 starting at 10 s and sending file "test1.txt"
FDTPFlow(1, 6, 5, "Dataset/test1.txt")
# Flow goes from node 7 to node 8 starting at 10 s and sending file "test2.txt"
FDTPFlow(8, 7, 5, "Dataset/test2.txt")

